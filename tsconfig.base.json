{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@oh-image/source"],
    "paths": {
      "@lonik/oh-image/react": ["./packages/oh-image/src/react/index.ts"],
      "@lonik/oh-image/plugin": ["./packages/oh-image/src/plugin/index.ts"]
    }
  }
}
