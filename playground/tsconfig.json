{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": ["es2023", "DOM"],
    "moduleDetection": "force",
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@lonik/oh-image/client": ["../src/client.d.ts"],
      "@lonik/oh-image/react": ["../src/react/index.ts"],
      "@lonik/oh-image/plugin": ["../src/plugin/index.ts"],
      "@lonik/oh-image/cloudflare": ["../src/loaders/cloudflare/index.ts"],
      "@lonik/oh-image/cloudinary": ["../src/loaders/cloudinary/index.ts"],
      "@lonik/oh-image/imgproxy": ["../src/loaders/imgproxy/index.ts"],
      "@lonik/oh-image/kontent": ["../src/loaders/kontent/index.ts"],
      "@lonik/oh-image/contentful": ["../src/loaders/contentful/index.ts"],
      "@lonik/oh-image/wordpress": ["../src/loaders/wordpress/index.ts"]
    },
    "types": ["../src/client.d.ts", "vite/client"],
    "verbatimModuleSyntax": true
  },
  "include": ["src", "../src/client.d.ts"]
}
