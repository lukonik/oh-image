{
  "name": "oh-image-monorepo",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "description": "Monorepo for oh-image React component library",
  "scripts": {
    "build": "pnpm --filter oh-image build",
    "dev": "pnpm --filter oh-image dev",
    "play": "pnpm --filter oh-image play",
    "website": "pnpm --filter website dev",
    "test": "pnpm --filter oh-image test",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "lightningcss"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7"
  }
}
