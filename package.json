{
  "name": "@lonik/oh-image",
  "type": "module",
  "version": "0.0.0",
  "description": "A React component library for optimized image handling.",
  "author": "Luka Onikadze <lukonik@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/lukonik/oh-image#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukonik/oh-image.git"
  },
  "bugs": {
    "url": "https://github.com/lukonik/oh-image/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "default": "./dist/plugin.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "default": "./dist/react.js"
    },
    "./client": {
      "types": "./dist/client.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "vite",
    "play:build": "vite build",
    "play:preview": "vite preview",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sharp": "0.34.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.16",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.3.0",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "vitest-browser-react": "^2.0.2",
    "@commitlint/config-conventional": "^20.4.1"
  },
  "dependencies": {
    "p-limit": "^7.3.0",
    "query-string": "^9.3.1"
  }
}
