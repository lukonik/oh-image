{
  "name": "@lonik/oh-image",
  "type": "module",
  "version": "0.0.0",
  "description": "A React component library for optimized image handling.",
  "author": "Luka Onikadze <lukonik@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/lukonik/oh-image#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukonik/oh-image.git"
  },
  "bugs": {
    "url": "https://github.com/lukonik/oh-image/issues"
  },
  "types": "./dist/client.d.ts",
  "exports": {
    "./package.json": "./package.json",
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "default": "./dist/plugin.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "default": "./dist/react.js"
    },
    "./client": {
      "types": "./dist/client.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "vite",
    "play:build": "vite build",
    "play:preview": "vite preview",
    "play:host": "vite --host",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "sharp": ">=0.34.5"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@tanstack/react-router": "^1.160.0",
    "@tanstack/router-plugin": "^1.160.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^25.0.3",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "4.0.18",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "happy-dom": "^20.6.0",
    "memfs": "^4.56.10",
    "supertest": "^7.2.2",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "tailwindcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "json-edit-react": "^1.29.0"
  },
  "dependencies": {
    "p-limit": "^7.3.0",
    "query-string": "^9.3.1"
  },
  "keywords": [
    "react",
    "reactjs",
    "react-components",
    "react-component-library",
    "vite",
    "vitejs",
    "vite-plugin"
  ]
}
